
@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add User</h1>

<div class="card mb-4">
    <h6 class="card-header">Retailer Details</h6>
    <p>Let us know the best way to reach you for sending visual identifiers</p>
    <div class="card-body">
        <form>
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Company Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Company Name">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Business Address</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Search Address">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Point of Contact</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Name of Point of Contact">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Contact Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" placeholder="Email Address">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-right">Contact Phone</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" placeholder="1234567890">
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 ml-sm-auto">
                    <button type="submit" class="btn btn-primary">Create Retailer</button>
                </div>
            </div>
        </form>
    </div>
</div>

