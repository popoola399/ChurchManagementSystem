@model ResetForgotPasswordViewModel
@{
    ViewData["Title"] = "ResetForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- [ Form ] Start -->
<form method="post" class="card">
    <div class="p-10 p-md-5">
        <!-- [ Logo ] Start -->
        <div class="d-flex justify-content-center align-items-center pb-2 mb-4">
            <div class="ui-w-60">
                <div class="w-100 position-relative">
                    <img src="~/img/logo-dark.png" alt="Brand Logo" class="img-fluid">
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- [ Logo ] End -->

        @if (!string.IsNullOrEmpty(ViewBag.Msg))
        {
            <span class="text-danger">@ViewBag.Msg</span>
        }

        <h5 class="text-center text-muted font-weight-normal mb-4">Reset Your Password</h5>
        <hr class="mt-0 mb-4">
        <p>Enter the token sent to your mail and then your new password.</p>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" required hidden value="@Model.Email">
            <div class="clearfix"></div>
        </div>

        <div class="form-group">
            <input asp-for="Token" type="text" class="form-control" placeholder="Enter token " required>
            <div class="clearfix"></div>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password " required>
            <div class="clearfix"></div>
        </div>

        <div class="form-group">
            <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirm Password " required>
            <div class="clearfix"></div>
        </div>


        <button type="submit" class="btn btn-primary btn-block">Change Password</button>

    </div>
</form>
<!-- [ Form ] End -->
